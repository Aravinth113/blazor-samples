    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @(await Html.RenderComponentAsync<SampleMetaData>(RenderMode.ServerPrerendered))

    <base href="~/" />
    <link href="~/styles/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/common/roboto.css" rel="stylesheet" />
    <link href="~/styles/common/highlight.css" rel="stylesheet" />
    <link href="~/styles/common/home.min.css" rel="stylesheet" />

    @(await Html.RenderComponentAsync<DynamicResources>(RenderMode.Static))

    <script src="~/scripts/common/lodash.min.js"></script>
    <script src="~/scripts/common/highlight.min.js"></script>
    <script src="~/scripts/common/index.js"></script>
